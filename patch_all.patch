+    char name[16] = "buf_";
+    uint32_t size;
+    uint32_t i;
+
+    size = sizeof(clipboard_t);
+    ds_retrieve_mem("clipboard",(char*) &CLIPBOARD, &size);
+    ds_delete_mem("clipboard");
+
+    log_msg("restored state:\n");
+    for(i = 0; i < BUF_MAX_COUNT; i++) {
