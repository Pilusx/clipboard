+    uint32_t i;
+
+    log_msg("Current state:\n");
+    clipboard_log();
+    ds_publish_mem("clipboard",(char*) &CLIPBOARD, sizeof(clipboard_t), DSF_OVERWRITE);
+    for(i = 0; i < BUF_MAX_COUNT; i++) {
+        if(slot(i) != EMPTY) {
